{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "jest.config.js"]
}

